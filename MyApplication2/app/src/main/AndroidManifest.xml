<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pigdiceapp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/dice_pic"
        android:label="@string/app_name"
        android:theme="@style/Theme.Base.AppCompat" >
        <activity
            android:name="com.example.pigdiceapp.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.example.pigdiceapp.app.DataService" >
        </service>

        <activity
            android:name="com.example.pigdiceapp.app.PreviousScoresActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
