<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_player_score_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_player_score_value"
        android:layout_marginLeft="85dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_player_score_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_comp_score_text"
        android:layout_below="@+id/row_player_score_text"
        android:layout_toLeftOf="@+id/row_player_score_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_comp_score_value"
        android:layout_alignTop="@+id/row_comp_score_text"
        android:layout_alignLeft="@+id/row_player_score_value"
        android:layout_alignStart="@+id/row_player_score_value" />
</RelativeLayout>